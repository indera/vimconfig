[user]
	name = Jacob Niehus
	email = jacob.niehus@gmail.com
[core]
	excludesfile = /Users/jniehus/.gitignore_global
	editor = vim
	pager =
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[alias]
	st = status
	ci = commit -v
	di = difftool -y
	co = checkout -- .
	new = log HEAD..origin --reverse
	up = pull origin master
	url = config --get remote.origin.url
	amend = commit --amend --no-edit
	ls = ls-files
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[diff]
	tool = bc3
[difftool]
	bc3 = trustExitCode
[push]
	default = simple
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[merge]
	tool = diffconflicts
	conflictstyle = diff3
[mergetool "diffconflicts"]
	cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[credential]
	helper = osxkeychain
